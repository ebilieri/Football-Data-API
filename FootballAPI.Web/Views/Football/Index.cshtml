@model IEnumerable<FootballAPI.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<h2>@Html.Raw(ViewBag.Campeonato) - @Html.Raw(ViewBag.CampeonatoId)</h2>

<div class="panel panel-success">
    <div class="panel-heading panel-head">
        Pesquisar Competição pelo Código
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Index", "Football", FormMethod.Get))
        {
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-3">
                    @Html.Editor("IdCompeticao", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-lg-2">
                    <input type="submit" value="Pesquisar" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading panel-head">
        Classificação dos Times
    </div>

    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Time")
                    </th>
                    <th>
                        @Html.DisplayName("Posição")
                    </th>
                    <th>
                        @Html.DisplayName("Vitórias")
                    </th>
                    <th>
                        @Html.DisplayName("Empates")
                    </th>
                    <th>
                        @Html.DisplayName("Derrotas")
                    </th>
                    <th>
                        @Html.DisplayName("Pontos")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Team.CrestUrl != null)
                            {
                                <img src="@Url.Content(item.Team.CrestUrl.ToString())" alt="Image" width="45" />
                            }
                            @Html.DisplayFor(modelItem => item.Team.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Won)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Draw)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Points)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>